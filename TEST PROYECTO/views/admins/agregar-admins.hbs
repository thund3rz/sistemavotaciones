    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="display-4 fw-normal">Agregar admins</h1>
    </div>

        <!--cuerpo del formulario-->
        <div class="card-body">

            <form method="POST" action="/agregar-admins">
            <!--campo nombre del admin-->
            <div class="mb-3">
                <label for="nombrea" class="form-label">Nombre del admin:</label>
                <input type="text" class="form-control" name="Nombrea" id="nombrea" value=""/>
            </div>
            <!-------------------->
            <!--campo password del admin-->
            <div class="mb-3">
                <label for="passworda" class="form-label">Contrase√±a del admin:</label>
                <input type="password" class="form-control" name="Passworda" id="passworda" value=""/>
            </div>
            <!-------------------->
            <!--campo correo del admin-->
            <div class="mb-3">
                <label for="correoa" class="form-label">Correo del admin:</label>
                <input type="email" class="form-control" name="Correoa" id="correoa" value=""/>
            </div>
            <!-------------------->
            
            <!--boton guardar/actualizar-->
            <button type="submit"  id="btn-guardar" class="btn btn-primary float-end">Guardar</button>
            <!-------------------->
        </form>
        </div>  
        <!-------------------->

    </div>

<a href="/panel" class="w-100 btn btn-lg btn-secondary">Volver</a>

